<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#121212"
    android:padding="16dp">

    <!-- Экран для отображения ввода и результата -->
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:background="#1E1E1E"
        android:layout_marginBottom="16dp" />

    <!-- Сетка кнопок -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_gravity="bottom"
        android:padding="4dp">

        <!-- Кнопка C (очистка) -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <!-- Кнопка деления -->
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <!-- Кнопка умножения -->
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="*"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <!-- Кнопки 7, 8, 9, - -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <!-- Кнопки 4, 5, 6, + -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <!-- Кнопки 1, 2, 3, = -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:text="="
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <!-- Кнопки 0 и . -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#FFA500" />

    </GridLayout>

</LinearLayout>
